package com.java.action;

import java.util.ArrayList;
import java.util.List;
import java.util.Map;

import org.apache.struts2.interceptor.RequestAware;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import com.java.service.iservice.ICarriageService;
import com.opensymphony.xwork2.ModelDriven;

import hibernate.Carriage;

@Controller("carriageAction")
@Scope("prototype")
public class CarriageAction implements ModelDriven<Carriage>, RequestAware {
	@Autowired
	@Qualifier("carriageService")
	private ICarriageService carriageService;

	private Carriage carriage = new Carriage();
	private Map<String, Object> requestMap;
	private String type;// 访问类型:是查询还是更新
	private String propName;// 查询条件:属性名
	private String propVal;// 属性值

	public String getPropVal() {
		return propVal;
	}

	public void setPropVal(String propVal) {
		this.propVal = propVal;
	}

	public String getPropName() {
		return propName;
	}

	public void setPropName(String propName) {
		this.propName = propName;
	}

	public String getType() {
		return type;
	}

	public void setType(String type) {
		this.type = type;
	}

	@Override
	public void setRequest(Map<String, Object> request) {
		this.requestMap = request;
	}

	@Override
	public Carriage getModel() {
		return carriage;
	}

	public String save() {
		return carriageService.save(carriage);
	}

	public String delete() {
		return carriageService.delete(carriage);
	}

	public String update() {
		return carriageService.update(carriage);
	}

	public String findAll() {
		String msg = "error";
		List<Carriage> carriageList = carriageService.findAll();
		if (carriageList != null && carriageList.size() > 0) {
			requestMap.put("carriageListFromServer", carriageList);
			msg = "success";
		}
		return msg;
	}

	public String findById() {
		String msg = "error";
		Carriage e = carriageService.findById(carriage.getId());
		if (e != null) {
			List<Carriage> carriageList = new ArrayList<Carriage>();
			carriageList.add(e);
			requestMap.put("carriageListFromServer", carriageList);
			msg = "success";
		}
		return msg;
	}

	// 根据属性查询
	public String findByProperty() {
		String msg = "error";
		Object val = propVal;
		if("carriageno".equals(propName)){
			val = Integer.parseInt(propVal);
		}
		List<Carriage> carriageList = carriageService.findByProperty(propName,val);//val是类型转换后的值
		if (carriageList != null && carriageList.size() > 0) {
			if ("update".equals(type)) {
				requestMap.put("carriage", carriageList.get(0));
				msg = "updatesuccess";
			} else {
				requestMap.put("carriageListFromServer", carriageList);
				msg = "success";
			}
		}
		return msg;
	}

}
